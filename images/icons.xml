<MaskRoot>

	<!-- Menu icons -->
	<IconSet directory="../" buffering="false">

		<!-- Resolutions -->
		<Resolution pixel="44" postfix="" directory="resources-round-218x218/drawables" />
		<Resolution pixel="44" postfix="" directory="resources-round-240x240/drawables" />
		<Resolution pixel="55" postfix="" directory="resources-round-260x260/drawables" />
		<Resolution pixel="65" postfix="" directory="resources-round-280x280/drawables" />
		<Resolution pixel="90" postfix="" directory="resources-round-390x390/drawables" />
		<Resolution pixel="90" postfix="" directory="resources/drawables" />

		<!-- Color -->
		<Color name="gray" value="#BFBFBF"/>

		<!-- General icons -->
		<Icon input="images/img/smarthome" output="smarthome" />
		<Icon input="images/img/kodi" colorize_input="gray" output="kodi" />
		<Icon input="images/img/headphone" colorize_input="gray" output="headphone" />
		<Icon input="images/img/playlist" colorize_input="gray" output="playlist" />
		<Icon input="images/img/paint_pallet" colorize_input="gray" output="paint_pallet" />
		<Icon input="images/img/switches" colorize_input="gray" output="switches" />
		<Icon input="images/img/user" colorize_input="gray" output="user" />
	</IconSet>

	
	<!-- Smaller icons -->
	<IconSet directory="../" buffering="false">

		<!-- Resolutions -->
		<Resolution pixel="32" postfix="" directory="resources-round-218x218/drawables" />
		<Resolution pixel="32" postfix="" directory="resources-round-240x240/drawables" />
		<Resolution pixel="36" postfix="" directory="resources-round-260x260/drawables" />
		<Resolution pixel="43" postfix="" directory="resources-round-280x280/drawables" />
		<Resolution pixel="60" postfix="" directory="resources-round-390x390/drawables" />
		<Resolution pixel="60" postfix="" directory="resources/drawables" />

		<!-- Color -->
		<Color name="gray" value="#BFBFBF"/>

		<!-- Player icons -->
		<Icon input="images/img/next" colorize_input="gray" output="next" />
		<Icon input="images/img/pause" colorize_input="gray" output="pause" />
		<Icon input="images/img/play" colorize_input="gray" output="play" />
		<Icon input="images/img/stop" colorize_input="gray" output="stop" />
		<Icon input="images/img/vol_down" colorize_input="gray" output="vol_down" />
		<Icon input="images/img/vol_up" colorize_input="gray" output="vol_up" />

		<!-- Kodi icons -->
		<Icon input="images/img/up" colorize_input="gray" output="up" />
		<Icon input="images/img/up" colorize_input="gray" transform_input="vertically" output="down" />
		<Icon input="images/img/up" colorize_input="gray" transform_input="diagonal" output="left" />
		<Icon input="images/img/up" colorize_input="gray" transform_input="diagonal2" output="right" />
		<Icon input="images/img/player" colorize_input="gray" output="player" />
		<Icon input="images/img/back" colorize_input="gray" output="back" />
		<Icon input="images/img/enter" colorize_input="gray" output="enter" />
	</IconSet>
	
	<!-- Small launcher icon -->
	<IconSet directory="../" buffering="false">

		<!-- Resolutions -->
		<Resolution pixel="30" postfix="" directory="resources-round-218x218/drawables" />
		<Resolution pixel="32" postfix="" directory="resources-round-240x240/drawables" />
		<Resolution pixel="35" postfix="" directory="resources-round-260x260/drawables" />
		<Resolution pixel="40" postfix="" directory="resources-round-280x280/drawables" />
		<Resolution pixel="60" postfix="" directory="resources-round-390x390/drawables" />
		<Resolution pixel="100" postfix="" directory="resources/drawables" />

		<!-- General icons -->
		<Icon input="images/img/smarthome" output="smarthome_small" />
	</IconSet>
</MaskRoot>
